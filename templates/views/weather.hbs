<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>
<body>
   {{!-- navbar --}}
    {{>navbar}}
    <!-- main header content -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-mid-10 col-12 mx-auto">
                <div class="main_content">
                    <form action="" class="temp_form">
                         <input type="text" id="cityName" placeholder="Enter  your City name" autocomplete="off">
                         <input type="submit" value="Search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInfo">
                    <div class="topLayer">
                        <p id="day">Monday</p>
                        <p id="today_date">20 Sept</p>
                    </div>
                    <div class="mainLayer ">
                        <p id="city_name">Output Here...</p>
                        <div class="middleLayer data_hide">
                            <p id="temp"><span>0</span><sup>o </sup>C</p>
                            <p id="temp_status"> <i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- footer code -->
    {{>footer}}
    <script src="js/main.js"></script>
</body>
</html>